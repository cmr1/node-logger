{
  "name": "cmr1-logger",
  "version": "0.1.8",
  "description": "Generic NodeJS logging class",
  "main": "index.js",
  "scripts": {
    "scan": "npm audit",
    "lint": "standard",
    "lint:fix": "standard --fix",
    "pretest": "npm run lint && npm run scan",
    "test": "nyc mocha test/**/*.spec.js && npm run nyc:report",
    "doc": "./node_modules/jsdoc/jsdoc.js lib/* -d docs -r README.md && git add docs && git commit -m 'Generated Docs'",
    "nyc:check": "nyc check-coverage --lines 95 --functions 95 --branches 95",
    "nyc:report": "nyc report --reporter=lcov",
    "preversion": "travis lint .travis.yml && npm run doc",
    "postversion": "git push --follow-tags"
  },
  "standard": {
    "ignore": [
      "docs/*"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:cmr1/node-logger.git"
  },
  "keywords": [
    "log",
    "logger",
    "logging",
    "colors",
    "output",
    "cli"
  ],
  "author": "Charlie McClung",
  "license": "MIT",
  "dependencies": {
    "colors": "^1.1.2"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "jsdoc": "^3.6.3",
    "mocha": "^5.2.0",
    "nyc": "^14.1.1",
    "sinon": "^1.17.7",
    "standard": "^11.0.1"
  }
}
